<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context="com.example.android.robovitics.Login.ForgotPasswordActivity">

    <EditText
        android:layout_marginTop="24dp"
        android:id="@+id/email_id_forgot_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Email Id"/>

    <Button
        android:background="@drawable/button_attribute"
        android:id="@+id/reset_password_button"
        android:layout_below="@+id/email_id_forgot_password"
        android:textColor="@android:color/white"
        android:padding="16dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reset password"/>


</RelativeLayout>
